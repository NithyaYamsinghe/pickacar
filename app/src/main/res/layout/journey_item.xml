            android:layout_width="90dp"
            android:backgroundTint="@color/colorTint"
            android:fontFamily="@font/whitney_bold"
            android:textColor="@android:color/white"
            android:text="Location : " />

    <TextView
        android:id="@+id/dj_tv_driver_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorTint"
        android:ems="10"
        android:fontFamily="@font/whitney_regular"
        android:text="Location"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTint" />

    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/dj_destination"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:backgroundTint="@color/colorTint"
            android:fontFamily="@font/whitney_bold"
            android:textColor="@android:color/white"
            android:text="Destination : " />

    <TextView
    android:id="@+id/dj_tv_driver_destination"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorTint"
    android:ems="10"
    android:fontFamily="@font/whitney_regular"
        android:text="Destination"
    android:textColor="@color/white"
    android:textColorHint="@color/colorTint" />

    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/dj_passengers"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:backgroundTint="@color/colorTint"
            android:fontFamily="@font/whitney_bold"
            android:textColor="@android:color/white"
            android:text="Passengers : " />

        <TextView
        android:id="@+id/dj_tv_driver_passengers"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorTint"
        android:ems="10"
        android:fontFamily="@font/whitney_regular"
        android:text="Passengers"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTint" />

    </LinearLayout>



    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/dj_status"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:backgroundTint="@color/colorTint"
            android:fontFamily="@font/whitney_bold"
            android:textColor="@android:color/white"
            android:text="Status : " />

    <TextView
        android:id="@+id/dj_tv_driver_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorTint"
        android:ems="10"
        android:fontFamily="@font/whitney_regular"
        android:text="Status"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTint" />

    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/dj_Price"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:backgroundTint="@color/colorTint"
            android:fontFamily="@font/whitney_bold"
            android:textColor="@android:color/white"
            android:text="Price : " />

    <TextView
        android:id="@+id/dj_tv_driver_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorTint"
        android:ems="10"
        android:fontFamily="@font/whitney_regular"
        android:text="Price"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTint" />
    </LinearLayout>
